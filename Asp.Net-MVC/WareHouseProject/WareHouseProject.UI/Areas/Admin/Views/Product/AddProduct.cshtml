
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutPage.cshtml";
}

@* 2 model nasıl eklencek *@
@model List<WareHouseProject.Model.Entity.Category>


<section class="content-header">
    <ol class="breadcrumb bg-gray-active ">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Category/ProductList">Product List</a></li>
        <li class="active">Add Product</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Add Product</h3>
                </div>
                <form action="/Admin/Product/AddProduct" enctype="multipart/form-data" method="post" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Product Name</label>
                            <input type="text" name="ProductName" class="form-control" placeholder="Product Name">
                            
                        </div>
                        <div class="form-group">
                            <label for="text">Description</label>
                            <input type="text" name="Description" class="form-control" placeholder="Description">
                        </div>
                        <div class="form-group">
                            <label for="text">Unit Price</label>
                            <input type="text" name="UnitPrice" class="form-control" placeholder="Unit Price">
                        </div>
                        <div class="form-group">
                            <label for="text">Units In Stock</label>
                            <input type="text" name="UnitStock" class="form-control" placeholder="Units In Stock">
                        </div>
                        <div class="form-group">
                            <label for="CategoryID">Choose Category</label>
                            <select name="CategoryID" class="form-control">
                                @foreach (var item in Model)
                                {
                                    <option value="@item.ID">@item.CategoryName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="box-footer">
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <div class="col-md-3" style="float:right">
                            <a href="/Admin/Product/ProductList" type="button" class="btn btn-block btn-default">Product List</a>
                        </div>
                    </div>
                </form>
            </div>
            @Html.Partial("/Views/Shared/FormMessage.cshtml")
        </div>
    </div>
</section>
